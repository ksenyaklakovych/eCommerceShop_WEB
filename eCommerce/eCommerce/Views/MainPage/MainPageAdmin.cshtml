<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    @{
        ViewBag.Title = "MainPageAdmin";
    }
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li class="nav-item">
                        <a class="fa fa-user fa-lg" aria-hidden="true"> @Session["Username"]</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        <h2>Admin page</h2>
        <div>
            @Html.ActionLink("Global main page", "../MainPage/MainPage")
        </div>
        <h3>Products</h3>
        <div>
            @Html.ActionLink("Create a product", "../CreateProduct/CreateProduct")
        </div>
        <div>
            @Html.ActionLink("View all products", "../MainPage/AllProducts")
        </div>
        <h3>Comments</h3>
        <div>
            @Html.ActionLink("View all comments", "../Comment/AllComments")
        </div>
        <h3>Deliveries</h3>
        <div>
            @Html.ActionLink("View all deliveries", "../Delivery/DeliveryDetail")
        </div>
        <h3>Users</h3>
        <div>
            @Html.ActionLink("View all users", "../User/AllUsers")
        </div>
    </div>
</body>
